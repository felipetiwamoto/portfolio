{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"version": 1,
	"cli": {
		"packageManager": "npm"
	},
	"newProjectRoot": "projects",
	"projects": {
		"portfolio": {
			"projectType": "application",
			"i18n": {
				"sourceLocale": "pt-BR",
				"locales": {
					"en": "src/locales/messages.en.xlf",
					"pt": "src/locales/messages.pt.xlf"
				}
			},
			"schematics": {
				"@schematics/angular:component": {
					"style": "scss",
					"skipTests": true
				},
				"@schematics/angular:service": {
					"skipTests": true
				},
				"@schematics/angular:directive": {
					"skipTests": true
				},
				"@schematics/angular:pipe": {
					"skipTests": true
				},
				"@schematics/angular:class": {
					"skipTests": true
				},
				"@schematics/angular:guard": {
					"skipTests": true
				},
				"@schematics/angular:interceptor": {
					"skipTests": true
				},
				"@schematics/angular:module": {
					"skipTests": true
				}
			},
			"root": "",
			"sourceRoot": "src",
			"prefix": "app",
			"architect": {
				"build": {
					"builder": "@angular/build:application",
					"options": {
						"localize": [
							"pt",
							"en"
						],
						"outputPath": {
							"base": "docs",
							"browser": ""
						},
						"baseHref": "/portfolio/",
						"browser": "src/main.ts",
						"tsConfig": "tsconfig.app.json",
						"inlineStyleLanguage": "scss",
						"assets": [
							{
								"glob": "**/*",
								"input": "public"
							}
						],
						"styles": [
							"src/styles.scss"
						],
						"polyfills": [
							"@angular/localize/init"
						]
					},
					"configurations": {
						"prd": {
							"budgets": [
								{
									"type": "initial",
									"maximumWarning": "1MB",
									"maximumError": "1MB"
								},
								{
									"type": "anyComponentStyle",
									"maximumWarning": "1MB",
									"maximumError": "1MB"
								}
							],
							"outputHashing": "all"
						},
						"dev": {
							"optimization": false,
							"extractLicenses": false,
							"sourceMap": true,
							"fileReplacements": [
								{
									"replace": "src/environments/environment.ts",
									"with": "src/environments/environment.dev.ts"
								}
							]
						},
						"pt": {
							"localize": [
								"pt"
							]
						},
						"en": {
							"localize": [
								"en"
							]
						}
					},
					"defaultConfiguration": "prd"
				},
				"serve": {
					"builder": "@angular/build:dev-server",
					"configurations": {
						"prd": {
							"buildTarget": "portfolio:build:prd"
						},
						"dev": {
							"buildTarget": "portfolio:build:dev"
						},
						"en": {
							"buildTarget": "portfolio:build:en"
						}
					},
					"defaultConfiguration": "dev"
				},
				"test": {
					"builder": "@angular/build:unit-test"
				},
				"extract-i18n": {
					"builder": "ng-extract-i18n-merge:ng-extract-i18n-merge",
					"options": {
						"buildTarget": "portfolio:build",
						"format": "xlf2",
						"outputPath": "src/locales",
						"targetFiles": [
							"messages.en.xlf",
							"messages.pt.xlf"
						]
					}
				}
			}
		}
	}
}